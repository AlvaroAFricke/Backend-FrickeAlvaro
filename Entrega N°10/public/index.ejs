<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>App</title>
</head>
<body>
    <div class="container mt-3">
        <div class="jumbotron">

            <div class="form-group">
                <label for="nombre"><b>Nombre</b></label>
                <label id="nombre"><b>Name</b></label>
                <br>
                <button id="Desloguear" type="submit" class="btn btn-success mt-3 mb-5">
                    Desloguear
                </button>
            </div>


    
            <h1 style="color: blue">Ingrese datos</h1>
            <br />
    
            <!-- Formulario para el ingreso de productos -->
    
            <form id="formularioProductos">
                <div class="form-group">
                    <label for="nombre"><b>Nombre</b></label>
                    <input id="nombre" class="form-control" type="text" name="nombre" />
                </div>
    
                <div class="form-group">
                    <label for="descripcion"><b>Descripcion</b></label>
                    <input id="descripcion" class="form-control" type="text" name="descripcion" />
                </div>
    
                <div class="form-group">
                    <label for="precio"><b>Precio</b></label>
                    <input id="precio" class="form-control" type="number" name="precio" />
                </div>
    
                <div class="form-group">
                    <label for="imagen"><b>Imagen</b></label>
                    <input id="imagen" class="form-control" name="imagen" />
                </div>
    
                <button id="enviar" type="submit" class="btn btn-success mt-3 mb-5">
                    Enviar
                </button>
            </form>
    
            <% if(productos.length> 0){ %>
                <div class="table-responsive">
                    <table class="table table-dark">
                        <tr style="color: yellow">
                            <th>Productos</th>
                            <th>Descripcion</th>
                            <th>Precio</th>
                            <th>Imagen</th>
                        </tr>
                        <% for (const producto of productos) {%>
                            <tr>
                                <td>
                                    <%=producto.nombre%>
                                </td>
                                <td>
                                    <%=producto.descripcion%>
                                </td>
                                <td>
                                    <%=producto.precio%>
                                </td>
                                <td>
                                    <%=producto.imagen%>
                                </td>
                            </tr>
                            <%};%>
                    </table>
                </div>
                <% } else{ %>
                    <h3 class="alert alert-danger">No se encontraron productos</h3>
                    <% } %>
    
        </div>
    
    </div>
    
    <script src="main.js"></script>
</body>
</html>